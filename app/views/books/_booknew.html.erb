<!--bookers2 book 投稿機能 部分テンプレート-->
  <%= form_with model:book do |book|%>
   <h2 class="mt-3">New book</h2>
   <div class="form-group">
    <label for ="book_title">Title</label>
    <%= book.text_field:title,class:'form-control book_title'%>
   </div>
   <div class="form-group">
    <label for="book_opinion">Opinion</label>
    <%= book.text_area:body,class:'form-control book_opinion' %><br>
   </div>
   <div class="form-group">
    <%= book.submit 'Create Book',class:'btn btn-success'%>
   </div>
  <% end %>