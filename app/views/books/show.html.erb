<!--bookers2 books#show 本の詳細画面-->
<%= render 'books/bookerror',book:@book %>
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <%= render 'users/userinfo',user:@user %>
   <%= render 'booknew',book:@book %>
  </div>

  <div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>
    <table class="table">
     <tr>
      <td>
       <%= link_to user_path(@user.id) do %>
        <%= image_tag @bookid.user.get_profile_image,size:'100x100' %><br>
        <%= @bookid.user.name %>
       <% end %>
      </td>
      <td>
       <%= link_to book_path(@bookid.id)do %>
        <%= @bookid.title %>
       <% end %>
      </td>
      <td><%= @bookid.body %></td>
      <td>
       <% if @bookid.user == current_user %>
        <%= link_to "Edit",edit_book_path(@bookid.id),class:'btn btn-success btn-sm'%>
       <% end %>
      </td>
      <td>
       <% if @bookid.user == current_user %>
        <%= link_to "Destroy",book_path(@bookid.id),method: :delete,"data-confirm"=>"本当に消しますか？",class:'btn btn-danger btn-sm'%></td>
       <% end %>
     </tr>
    </table>
   </div>
  </div>
 </div>
</div>