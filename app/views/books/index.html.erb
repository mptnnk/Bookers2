<!--bookers2 books#index 投稿した本の一覧画面-->
<%= render 'users/userinfo',user:@user ,book:@book %>

<div class="indexarea">
 <h1>Books</h1>
 <% @books.each do |book|%>
  <%= link_to user_path(@user.id) do %>
   <%= image_tag book.user.get_image %>
  <% end %>
  <p>Title
   <%= link_to book_path(book.id) do %>
    <%= book.title %>
   <% end %>
  </p>
  <p>Opinion <%= book.body %></p>
 <% end %>
</div>
