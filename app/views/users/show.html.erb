<!--bookers2 users#show ユーザーの詳細画面 = ログインしたときの画面-->
<%= render 'books/bookerror',book:@book %>
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <%= render 'userinfo',user:@user %>
   <%= render 'books/booknew',book:@book %>
  </div>
  
  <div class="col-md-8 offset-md-1">
   <h2>Books</h2>
   <table class="table">
    <thead>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </thead>
    
    <tbody>
     <% @books.each do |book|%>
     <tr>
      <td>
       <% unless @user.books == 0 %>
         <%= link_to user_path(@user.id) do %>
          <%= image_tag @user.get_profile_image,size:'100x100' %>
         <% end %>
        <% else %>
       <% end %>
      </td>
      <td>
       <%= link_to book_path(book.id) do %>
        <%= book.title %>
       <% end %>
      </td>
      <td>
       <%= book.body %>
      </td>
     </tr>
     <% end %>
    </tbody>
   </table>
   
  </div>
 </div>
</div>