<!--bookers2 users#show ユーザーの詳細画面 = ログインしたときの画面-->
<%= render 'books/bookerror',book:@book %>
<%= render 'userinfo',user:@user %>
<%= render 'books/booknew',book:@book %>

 <h1>Books</h1>
 <% @books.each do |book|%>
  <% unless @user.books == 0 %>
   <%= link_to user_path(@user.id) do %>
    <%= image_tag @user.get_image %>
   <% end %>
   <% else %>
  <% end %>
  <p>Title
   <%= link_to book_path(book.id) do %>
    <%= book.title %>
   <% end %></p>
  <p>Opinion <%= book.body %></p>
 <% end %>