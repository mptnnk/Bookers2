<!--bookers2 users#show ユーザーの詳細画面 = ログインしたときの画面-->
<div class="container">
 <div class="row row-cols-2">
  <div class="col">
   <%= render 'books/bookerror',book:@book %>
   <%= render 'userinfo',user:@user %>
   <%= render 'books/booknew',book:@book %>
  </div>
  
  <div class="col">
   <table class="table">
    <h2>Books</h2>
    <thead>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
    </thead>
    <tbody>
     <% @books.each do |book|%>
     <tr>
      <td>
       <% unless @user.books == 0 %>
         <%= link_to user_path(@user.id) do %>
          <%= image_tag @user.get_image,size:'100x100' %>
         <% end %>
        <% else %>
       <% end %>
      </td>
      <td>
       <%= link_to book_path(book.id) do %>
        <%= book.title %>
       <% end %>
      </td>
      <td>
       <%= book.body %>
      </td>
     </tr>
     <% end %>
    </tbody>
   </table>
   
  </div>
 </div>
</div>