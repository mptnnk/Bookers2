<div class="container">
 <h1>User info</h1>
 <% if @user.errors.any? %>
  <h2><%= @user.errors.count %>error prohibited this obj being saved.</h2>
  <ul>
   <% @user.errors.full_messages.each do |message|%>
    <li><%= message %></li>
   <% end %>
  </ul>
 <% end %>
 
 <%= form_with model:@user do |user|%>
 <div class="form-group">
  <label for="user_name">Name</label>
  <%= user.text_field:name,class:'form-control user_name'%>
 </div>
 <div class="form-group">
  <label for="image">Image</label>
  <%= user.file_field :image, accept:"image/*",class:'form-control-file image'%>
 </div>
 <div class="form-group">
  <label for="introduction">Introduction</label>
  <%= user.text_area:introduction,class:'form-control introduction'%>
 </div>
 <div class="form-group">
  <%= user.submit 'Update User',class:'btn btn-secondary'%>
 </div>
<% end %> 
</div>